<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csc535.app.pollpops" >
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserPerformance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_user_performance"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".UserPerformanceView"
            android:label="@string/title_activity_user_performance_view" >
        </activity>
        <activity
            android:name=".PerformerActivity"
            android:label="@string/title_activity_performer" >
        </activity>
        <activity
            android:name=".PerformanceCreate"
            android:label="@string/title_activity_performance_create" >
        </activity>
        <activity
            android:name=".PerformerChats"
            android:label="@string/title_activity_performer_chats" >
        </activity>
        <activity
            android:name=".performer_login"
            android:label="@string/title_activity_performer_login" >
        </activity>
        <activity
            android:name=".AudienceSetlist"
            android:label="@string/title_activity_audience_setlist" >
        </activity>
        <activity
            android:name=".PerformanceRecord"
            android:label="@string/title_activity_performance_record" >
        </activity>
    </application>

</manifest>
